---
import Header from '../components/Header';
import Hero from '../components/Hero';
import Sidebar from '../components/Sidebar';
import NewsletterModal from '../components/NewsletterModal';
import SkipLink from '../components/SkipLink';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Sveltia Astro Theme</title>
    <link rel="manifest" href="/manifest.json" />
  </head>
  <body>
    <SkipLink client:load />
    <Header client:load />
    <Hero client:load />
    <main id="main-content" class="flex flex-col md:flex-row max-w-7xl mx-auto p-4">
      <section class="flex-1 p-4">
        <h1 class="text-2xl font-bold mb-4">Welcome to Sveltia Astro Theme</h1>
        <p>This is the homepage. Latest articles and features will appear here.</p>
      </section>
      <Sidebar client:load />
    </main>
    <NewsletterModal client:load />
  </body>
</html>