---
// src/components/seo/SocialMeta.astro

interface Props {
  ogType?: string;
  title: string;
  description: string;
  url: string;
  image?: string;
  publishDate?: string;
  updatedDate?: string;
}

const {
  ogType = 'website',
  title,
  description,
  url,
  image,
  publishDate,
  updatedDate,
} = Astro.props;
---
<meta property="og:type" content={ogType} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
{image && <meta property="og:image" content={image} />}
{publishDate && <meta property="article:published_time" content={publishDate} />}
{updatedDate && <meta property="article:modified_time" content={updatedDate} />}

<!-- Facebook-specific -->
<meta property="og:site_name" content="Your Site Name" /> <!-- TODO: Replace with actual site name -->

<!-- Twitter Card tags are handled separately in MetaTags.astro -->
